{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "app.ts"],
  "exclude": ["node_modules", "dist"]
} 