{
  "cli": {
    "version": ">= 16.3.2",
    "appVersionSource": "remote"
  },
  "build": {
    "android": {
      "buildType": "gradle7",
      "gradleCommand": ":app:assembleRelease"
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "buildType": "apk"  // Generates a debug APK
      }
    },
    "production": {
      "android": {
        "buildType": "apk", // Generates a release APK
        "gradleCommand": ":app:assembleRelease"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
